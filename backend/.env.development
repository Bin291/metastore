# ==============================================
# OPTION 1: Local Backend + ngrok + Vercel
# ==============================================

# Application
NODE_ENV=production
PORT=3001
GLOBAL_PREFIX=api
CORS_ORIGINS=https://your-app.vercel.app

# Database - SQLite (Local)
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/production.sqlite

# Storage - MinIO Local
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Buckets
BUCKET_PENDING=metastore-pending
BUCKET_PRIVATE=metastore-private
BUCKET_PUBLIC=metastore-public
BUCKET_REJECTED=metastore-rejected
BUCKET_SANDBOX=metastore-sandbox

# Enable full features (video processing)
ENABLE_VIDEO_PROCESSING=true

# JWT Secrets
JWT_ACCESS_SECRET=your-secret-change-this
JWT_REFRESH_SECRET=your-refresh-secret-change-this
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Payment Configuration - Thông tin tài khoản Techcombank của bạn
PAYMENT_BANK_NAME=Techcombank
PAYMENT_BANK_ACCOUNT=33333333384
PAYMENT_BANK_ACCOUNT_NAME=NGUYEN PHUONG BINH
PAYMENT_BANK_BRANCH=Chi nhánh Hồ Chí Minh
PAYMENT_QR_ENABLED=true
