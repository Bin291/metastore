# Railway Environment Variables Template
# Copy these to Railway dashboard: Settings > Variables

NODE_ENV=production
PORT=${{ PORT }}
GLOBAL_PREFIX=api

# Database - Railway SQLite (simple) or Postgres (recommended)
DATABASE_TYPE=sqlite
DATABASE_PATH=/app/data/production.sqlite

# Storage - Cloudflare R2 or Backblaze B2
# Railway doesn't have persistent storage
# For Cloudflare R2: account-id.r2.cloudflarestorage.com (use port 443)
# For Backblaze B2: s3.us-west-000.backblazeb2.com (use port 443)
# For MinIO self-hosted: your-domain.com (use port 9000)
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=true
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Buckets
BUCKET_PENDING=metastore-pending
BUCKET_PRIVATE=metastore-private
BUCKET_PUBLIC=metastore-public
BUCKET_REJECTED=metastore-rejected
BUCKET_SANDBOX=metastore-sandbox

# Enable video processing (Railway supports FFmpeg)
ENABLE_VIDEO_PROCESSING=true

